    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Abel&family=Monomaniac+One&display=swap" rel="stylesheet">

  </head>

  <body>
  
    <div class="<% unless controller_name == "bookings" && action_name == "index" %>form-container<% end %>">

      <%= yield %>
      <%= render "shared/navbar" %>
    </div>
  </body>
</html>
